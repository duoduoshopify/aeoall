{%- comment -%} AEOall Pro - SEO Entry Point {%- endcomment -%}

{% render 'meta-seo' %}

{% render 'json-ld-website' %}

{%- if request.page_type == 'product' -%}
  {% render 'json-ld-product' %}
{%- endif -%}

{% render 'json-ld-breadcrumbs' %}

{%- if request.page_type == 'index' -%}
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ page_title }}">
    <meta property="og:description" content="{{ page_description }}">
  {%- endif -%}
  
  {%- if page_image -%}
    <meta property="og:image" content="http:{{ page_image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ page_image | image_url: width: 1200 }}">
  {%- endif -%}