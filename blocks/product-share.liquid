<div class="product__share" {{ block.shopify_attributes }}>
  <span class="share-label">{{ 'general.share.share_on' | t }}</span>
  
  <ul class="list-unstyled list-social">
    {%- if block.settings.share_facebook -%}
    <li>
      <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: product.url }}" class="link list-social__link" target="_blank">
        {%- render 'icon-facebook' -%} 
        <span class="visually-hidden">Facebook</span>
      </a>
    </li>
    {%- endif -%}
    {%- if block.settings.share_twitter -%}
    <li>
      <a href="//twitter.com/share?text={{ product.title | url_param_escape }}&amp;url={{ shop.url | append: product.url }}" class="link list-social__link" target="_blank">
        {%- render 'icon-twitter' -%} 
        <span class="visually-hidden">Twitter/X</span>
      </a>
    </li>
    {%- endif -%}
    {%- if block.settings.share_pinterest -%}
    <li>
      <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: product.url }}&amp;media={{ product.featured_media | image_url: width: 1024, height: 1024 }}&amp;description={{ product.title | url_param_escape }}" class="link list-social__link" target="_blank">
        {%- render 'icon-pinterest' -%} 
        <span class="visually-hidden">Pinterest</span>
      </a>
    </li>
    {%- endif -%}
  </ul>
</div>

{% schema %}
{
  "name": "Product Share",
  "settings": [
    {
      "type": "paragraph",
      "content": "确保你的主题包含对应的社交图标 snippet (如 icon-facebook.liquid)。"
    },
    {
      "type": "checkbox",
      "id": "share_facebook",
      "label": "分享到 Facebook",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_twitter",
      "label": "分享到 Twitter/X",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "share_pinterest",
      "label": "分享到 Pinterest",
      "default": true
    }
  ]
}
{% endschema %}
