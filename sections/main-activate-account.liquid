<div class="customer auth-page page-width">
  <h1>{{ 'customer.activate_account.title' | t | default: 'Activate account' }}</h1>
  <p>{{ 'customer.activate_account.subtext' | t | default: 'Create your password to activate your account.' }}</p>

  {%- form 'activate_customer_password' -%}
    {%- if form.errors -%}
      <div class="form-errors" role="alert">{{ form.errors | default_errors }}</div>
    {%- endif -%}

    <div class="field">
      <label for="ActivatePassword">{{ 'customer.activate_account.password' | t | default: 'Password' }}</label>
      <input type="password" name="customer[password]" id="ActivatePassword" autocomplete="new-password" required>
    </div>

    <div class="field">
      <label for="ActivatePasswordConfirmation">{{ 'customer.activate_account.password_confirm' | t | default: 'Confirm password' }}</label>
      <input type="password" name="customer[password_confirmation]" id="ActivatePasswordConfirmation" autocomplete="new-password" required>
    </div>

    <button type="submit" class="button">{{ 'customer.activate_account.submit' | t | default: 'Activate account' }}</button>
    <button type="submit" name="decline" class="button button--secondary">{{ 'customer.activate_account.cancel' | t | default: 'Decline invitation' }}</button>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "Main activate account",
  "settings": []
}
{% endschema %}
