<div class="customer auth-page page-width">
  <h1>{{ 'customer.reset_password.title' | t | default: 'Reset password' }}</h1>
  <p>{{ 'customer.reset_password.subtext' | t: email: email | default: 'Enter a new password for your account.' }}</p>

  {%- form 'reset_customer_password' -%}
    {%- if form.errors -%}
      <div class="form-errors" role="alert">{{ form.errors | default_errors }}</div>
    {%- endif -%}

    <div class="field">
      <label for="ResetPassword">{{ 'customer.reset_password.password' | t | default: 'Password' }}</label>
      <input type="password" name="customer[password]" id="ResetPassword" autocomplete="new-password" required>
    </div>

    <div class="field">
      <label for="ResetPasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t | default: 'Confirm password' }}</label>
      <input type="password" name="customer[password_confirmation]" id="ResetPasswordConfirmation" autocomplete="new-password" required>
    </div>

    <button type="submit" class="button">{{ 'customer.reset_password.submit' | t | default: 'Reset password' }}</button>
  {%- endform -%}
</div>

{% schema %}
{
  "name": "Main reset password",
  "settings": []
}
{% endschema %}
