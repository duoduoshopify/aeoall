{{ 'component-base.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* 简单的 Flex 布局 */
  .dynamic-group-content {
    display: flex;
    flex-direction: column;
    align-items: {{ section.settings.alignment }};
    text-align: {{ section.settings.alignment }};
    gap: 1.5rem;
    max-width: {{ section.settings.content_width }}rem;
    margin: 0 auto;
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="page-width">
    <div class="dynamic-group-content">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          
          {%- when 'heading' -%}
            {% render 'element-heading', 
              title: block.settings.heading, 
              size: block.settings.size,
              tag: block.settings.tag 
            %}

          {%- when 'text' -%}
            {% render 'element-text', 
              text: block.settings.text,
              style: block.settings.style 
            %}

          {%- when 'button' -%}
            {% render 'element-button', 
              label: block.settings.button_label, 
              link: block.settings.button_link,
              style: block.settings.button_style
            %}

        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Dynamic Group",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "select",
      "id": "alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "center",
      "label": "Content Alignment"
    },
    {
      "type": "range",
      "id": "content_width",
      "min": 40,
      "max": 120,
      "step": 5,
      "unit": "rem",
      "label": "Content Max Width",
      "default": 80
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "size",
          "options": [
            { "value": "h1", "label": "Extra Large" },
            { "value": "h2", "label": "Large" },
            { "value": "h3", "label": "Medium" },
            { "value": "h4", "label": "Small" }
          ],
          "default": "h2",
          "label": "Size"
        },
        {
          "type": "select",
          "id": "tag",
          "options": [
            { "value": "h1", "label": "H1" },
            { "value": "h2", "label": "H2" },
            { "value": "h3", "label": "H3" }
          ],
          "default": "h2",
          "label": "HTML Tag (SEO)"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers.</p>",
          "label": "Description"
        },
        {
          "type": "select",
          "id": "style",
          "options": [
            { "value": "body", "label": "Body" },
            { "value": "subtitle", "label": "Subtitle (Uppercase)" }
          ],
          "default": "body",
          "label": "Style"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        },
        {
          "type": "select",
          "id": "button_style",
          "options": [
            { "value": "primary", "label": "Primary" },
            { "value": "secondary", "label": "Outline" }
          ],
          "default": "primary",
          "label": "Style"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Dynamic Content Group",
      "blocks": [
        { "type": "heading" },
        { "type": "text" },
        { "type": "button" }
      ]
    }
  ]
}
{% endschema %}