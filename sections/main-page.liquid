{% comment %}
  Main Page Section
{% endcomment %}

<div class="page" data-section="{{ section.id }}">
  <div class="page-width">
    <header class="page-header">
      <h1 class="page-title">{{ page.title }}</h1>
    </header>

    <div class="page-content rte">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Page",
  "class": "section-page",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}
