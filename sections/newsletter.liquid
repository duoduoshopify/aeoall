{%- style -%}
  .newsletter-{{ section.id }}-padding {
    padding-top: {{ section.settings.pt | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.pb | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .newsletter-{{ section.id }}-padding {
      padding-top: {{ section.settings.pt }}px;
      padding-bottom: {{ section.settings.pb }}px;
    }
  }

  {%- if section.settings.enable_background_image and section.settings.background_image != blank -%}
    .newsletter-{{ section.id }} {
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
    }
  {%- endif -%}

  .newsletter__content {
    max-width: 800px;
    margin: 0 auto;
  }

  .newsletter__subheading {
    font-size: 1.1rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: #2563eb;
    margin: 0 0 1rem;
  }

  .newsletter__heading {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    line-height: 1.2;
    margin: 0 0 1rem;
    color: #1d1d1f;
  }

  .newsletter__description {
    font-size: 1.1rem;
    line-height: 1.7;
    color: #6b7280;
    margin-bottom: 2rem;
  }

  .newsletter__description p {
    margin: 0;
  }

  .newsletter__form {
    margin-bottom: 1.5rem;
  }

  .newsletter__field-wrapper {
    max-width: 600px;
    margin: 0 auto;
  }

  .newsletter .field {
    display: flex;
    position: relative;
  }

  .newsletter .field__input {
    flex: 1;
    height: 56px;
    padding: 0 120px 0 20px;
    border: 2px solid #e5e7eb;
    border-radius: 28px;
    font-size: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .newsletter .field__input:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 4px rgba(37, 99, 235, 0.1);
  }

  .newsletter .field__label {
    position: absolute;
    left: 20px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 1rem;
    color: #9ca3af;
    pointer-events: none;
    transition: all 0.2s;
  }

  .newsletter .field__input:focus + .field__label,
  .newsletter .field__input:not(:placeholder-shown) + .field__label {
    opacity: 0;
  }

  .newsletter__button {
    position: absolute;
    right: 6px;
    top: 6px;
    bottom: 6px;
    width: 110px;
    background: #1d1d1f;
    color: #fff;
    border: none;
    border-radius: 22px;
    font-size: 0.95rem;
    font-weight: 700;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
  }

  .newsletter__button:hover {
    background: #2563eb;
    transform: scale(1.02);
  }

  .newsletter__button svg {
    width: 18px;
    height: 18px;
  }

  .newsletter__error-message,
  .newsletter__success-message {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    font-size: 0.9rem;
  }

  .newsletter__error-message {
    color: #dc2626;
  }

  .newsletter__success-message {
    color: #059669;
  }

  .newsletter__discount {
    display: inline-block;
    background: #ecfdf5;
    color: #059669;
    padding: 0.75rem 1.5rem;
    border-radius: 8px;
    font-size: 0.95rem;
    font-weight: 600;
    margin-top: 1rem;
  }

  @media screen and (max-width: 749px) {
    .newsletter .field__input {
      padding-right: 100px;
    }
    .newsletter__button {
      width: 90px;
      font-size: 0.85rem;
    }
  }
{%- endstyle -%}

<div class="newsletter newsletter-{{ section.id }} color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width newsletter__wrapper newsletter-{{ section.id }}-padding">
    <div class="newsletter__content" style="text-align: {{ section.settings.text_align }};">
      {%- if section.settings.subheading != blank -%}
        <p class="newsletter__subheading">{{ section.settings.subheading | escape }}</p>
      {%- endif -%}

      {%- if section.settings.heading != blank -%}
        <h2 class="newsletter__heading">{{ section.settings.heading | escape }}</h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="newsletter__description rte">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

      {%- form 'customer', id: 'ContactNewsletter', class: 'newsletter__form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <div class="newsletter__field-wrapper">
          <div class="field">
            <input
              id="NewsletterForm--{{ section.id }}"
              type="email"
              name="contact[email]"
              class="field__input"
              value="{{ form.email }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                autofocus
                aria-invalid="true"
                aria-describedby="NewsletterError--{{ section.id }}"
              {% elsif form.posted_successfully? %}
                aria-describedby="NewsletterSuccess--{{ section.id }}"
              {% endif %}
              placeholder="{{ section.settings.placeholder | escape }}"
              required
            >
            <label class="field__label" for="NewsletterForm--{{ section.id }}">
              {{ section.settings.placeholder | escape }}
            </label>
            <button type="submit" name="commit" class="newsletter__button field__button" aria-label="{{ 'newsletter.button_label' | t }}">
              {% render 'icon-arrow-right' %}
            </button>
          </div>
          {%- if form.errors -%}
            <small class="newsletter__error-message form__message" id="NewsletterError--{{ section.id }}">
              {% render 'icon-error' %}
              {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}.
            </small>
          {%- endif -%}
        </div>

        {%- if form.posted_successfully? -%}
          <h3 class="newsletter__success-message form__message" id="NewsletterSuccess--{{ section.id }}" tabindex="-1" autofocus>
            {% render 'icon-success' %}
            {{ 'newsletter.success' | t }}
          </h3>
        {%- endif -%}
      {%- endform -%}

      {%- if section.settings.enable_discount -%}
        <p class="newsletter__discount">{{ section.settings.discount_text | escape }}</p>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Email Newsletter",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "default": "Subscribe to our emails",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "placeholder",
      "default": "Enter your email",
      "label": "Placeholder Text"
    },
    {
      "type": "select",
      "id": "text_align",
      "default": "center",
      "label": "Text Alignment",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" }
      ]
    },
    {
      "type": "header",
      "content": "Discount"
    },
    {
      "type": "checkbox",
      "id": "enable_discount",
      "default": true,
      "label": "Enable discount message"
    },
    {
      "type": "text",
      "id": "discount_text",
      "default": "Use code SAVE50 for 50% off",
      "label": "Discount Text"
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "checkbox",
      "id": "enable_background_image",
      "default": false,
      "label": "Enable background image"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "default": "background-1",
      "label": "Color Scheme",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "background-3", "label": "Background 3" },
        { "value": "background-4", "label": "Background 4" },
        { "value": "background-5", "label": "Background 5" }
      ]
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "pt",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 40
    },
    {
      "type": "range",
      "id": "pb",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 40
    }
  ],
  "presets": [
    {
      "name": "Email Newsletter"
    }
  ]
}
{% endschema %}
