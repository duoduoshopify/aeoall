{%- style -%}
  .template-search__header {
    margin-bottom: clamp(3rem, 5vw, 5rem);
  }

  .template-search__title {
    margin: 0 0 1.5rem;
    font-size: clamp(2.6rem, 2.1rem + 1vw, calc(var(--font-heading-scale) * 3.2rem));
  }

  .template-search__status {
    font-size: 1.45rem;
    opacity: 0.6;
    letter-spacing: 0.5px;
  }

  .search-empty {
    text-align: center;
    padding: clamp(5rem, 10vw, 8rem) 0;
  }

  .search-empty__text {
    font-size: clamp(1.45rem, 1.3rem + 0.2vw, 1.6rem);
    margin-bottom: 2.4rem;
    color: rgba(var(--color-text), 0.72);
  }

  .search-empty .atc-btn {
    width: auto;
    padding: 0 3.4rem;
    min-height: 4.8rem;
    text-decoration: none;
  }
{%- endstyle -%}

<div class="template-search page-width section-{{ section.id }}-padding" data-section-hydrate data-section-id="{{ section.id }}" data-section-type="main-search" style="padding-top: 60px; padding-bottom: 80px;">
  
  {%- comment -%} 1. 搜索头部状态区 {%- endcomment -%}
  <div class="template-search__header text-center">
    {%- if search.performed -%}
      <h1 class="template-search__title">
        {%- if search.results_count == 0 -%}
          {{ 'templates.search.no_results' | t: terms: search.terms }}
        {%- else -%}
          {{ 'templates.search.title' | t }}
        {%- endif -%}
      </h1>
      <p class="template-search__status">
        {{ 'templates.search.results_with_count_and_term' | t: count: search.results_count, terms: search.terms }}
      </p>
    {%- else -%}
      <h1 class="template-search__title">{{ 'templates.search.title' | t }}</h1>
    {%- endif -%}
  </div>

  {%- if search.performed -%}
    {%- paginate search.results by section.settings.products_per_page -%}
      <div id="ProductGridContainer">
        
        {%- if search.results_count == 0 -%}
          {%- comment -%} 搜索无结果时的空状态 {%- endcomment -%}
          <div class="search-empty">
            <p class="search-empty__text">{{ 'templates.search.no_results' | t: terms: search.terms }}</p>
            <a href="{{ routes.all_products_collection_url }}" class="atc-btn">
              {{ 'general.continue_shopping' | t }}
            </a>
          </div>
        {%- else -%}
          
          {%- comment -%} 2. 紧凑型产品网格 (4列) {%- endcomment -%}
          <ul class="grid grid--2-col grid--3-col-tablet grid--4-col-desktop" role="list" style="list-style: none; padding: 0;">
            {%- for item in search.results -%}
              {%- if item.object_type == 'product' -%}
                {%- liquid
                  assign card_image_loading = 'lazy'
                  assign card_image_fetchpriority = 'auto'
                  if forloop.index <= 4
                    assign card_image_loading = 'eager'
                    assign card_image_fetchpriority = 'high'
                  endif
                -%}
                <li class="grid__item">
                  {% render 'card-product', 
                    card_product: item, 
                    show_vendor: section.settings.show_vendor,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_loading: card_image_loading,
                    image_fetchpriority: card_image_fetchpriority
                  %}
                </li>
              {%- endif -%}
            {%- endfor -%}
          </ul>

          {%- comment -%} 3. 调用美化后的分页组件 {%- endcomment -%}
          {%- if paginate.pages > 1 -%}
            {% render 'pagination', paginate: paginate %}
          {%- endif -%}
          
        {%- endif -%}
      </div>
    {%- endpaginate -%}
  {%- endif -%}
</div>

{% schema %}
{
  "name": "Search Results",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "adapt", "label": "Adapt to image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ],
      "default": "square",
      "label": "Image ratio"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show Vendor"
    }
  ]
}
{% endschema %}