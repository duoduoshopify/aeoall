{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collection-header {
    margin-bottom: 5rem;
  }

  .collection-hero__title {
    margin: 0 0 1.5rem;
    font-size: calc(var(--font-heading-scale) * 4rem);
  }

  .collection-description {
    max-width: 70rem;
    margin: 0 auto;
    line-height: 1.6;
    color: rgba(var(--color-text), 0.7);
  }

  .collection-toolbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid rgb(var(--color-border));
  }

  .collection-sort {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .collection-sort__label {
    font-size: 1.4rem;
    font-weight: 600;
  }

  .collection-sort__select {
    padding: 0.8rem 3rem 0.8rem 1.2rem;
    border: 1px solid rgb(var(--color-border));
    border-radius: 4px;
    font-size: 1.4rem;
    background: rgb(var(--color-background));
    cursor: pointer;
  }

  @media (max-width: 749px) {
    .collection-toolbar {
      flex-direction: column;
      gap: 1.5rem;
      align-items: flex-start;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding page-width">
  {%- comment -%} 1. 分类头部排版优化 {%- endcomment -%}
  <div class="collection-header text-center">
    {%- if section.settings.show_title -%}
      <h1 class="collection-hero__title">{{ collection.title | escape }}</h1>
    {%- endif -%}
    
    {%- if section.settings.show_description and collection.description != blank -%}
      <div class="collection-description rte">
        {{ collection.description }}
      </div>
    {%- endif -%}
    
    {%- if section.settings.show_product_count -%}
      <p style="font-size: 1.2rem; text-transform: uppercase; letter-spacing: 2px; margin-top: 2rem; opacity: 0.5;">
        {{ collection.products_count }} Products
      </p>
    {%- endif -%}
  </div>

  {%- comment -%} 2. 工具栏（排序和筛选）{%- endcomment -%}
  {%- if section.settings.enable_sorting -%}
  <div class="collection-toolbar">
    <div class="collection-toolbar__item collection-toolbar__item--left">
      <p class="collection-toolbar__count">
        {{ 'collections.general.items_with_count' | t: count: collection.products_count }}
      </p>
    </div>

    <div class="collection-toolbar__item collection-toolbar__item--right">
      <div class="collection-sort">
        <label for="SortBy" class="collection-sort__label">
          {{ 'collections.sorting.title' | t }}
        </label>
        <select 
          id="SortBy" 
          class="collection-sort__select"
          aria-describedby="a11y-refresh-page-message"
        >
          {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
          <option value="manual" {% if sort_by == 'manual' %}selected{% endif %}>
            {{ 'collections.sorting.featured' | t }}
          </option>
          <option value="best-selling" {% if sort_by == 'best-selling' %}selected{% endif %}>
            {{ 'collections.sorting.best_selling' | t }}
          </option>
          <option value="title-ascending" {% if sort_by == 'title-ascending' %}selected{% endif %}>
            {{ 'collections.sorting.az' | t }}
          </option>
          <option value="title-descending" {% if sort_by == 'title-descending' %}selected{% endif %}>
            {{ 'collections.sorting.za' | t }}
          </option>
          <option value="price-ascending" {% if sort_by == 'price-ascending' %}selected{% endif %}>
            {{ 'collections.sorting.price_ascending' | t }}
          </option>
          <option value="price-descending" {% if sort_by == 'price-descending' %}selected{% endif %}>
            {{ 'collections.sorting.price_descending' | t }}
          </option>
          <option value="created-descending" {% if sort_by == 'created-descending' %}selected{% endif %}>
            {{ 'collections.sorting.date_descending' | t }}
          </option>
          <option value="created-ascending" {% if sort_by == 'created-ascending' %}selected{% endif %}>
            {{ 'collections.sorting.date_ascending' | t }}
          </option>
        </select>
      </div>
    </div>
  </div>
  {%- endif -%}

  <script>
    document.getElementById('SortBy')?.addEventListener('change', function(e) {
      const url = new URL(window.location.href);
      url.searchParams.set('sort_by', e.target.value);
      window.location.href = url.toString();
    });
  </script>

  {%- comment -%} 2. 产品网格区域 {%- endcomment -%}
  <div id="ProductGridContainer">
    {%- paginate collection.products by section.settings.products_per_page -%}
      {%- if collection.products.size == 0 -%}
        <div class="text-center" style="padding: 10rem 0;">
          <p>No products found in this collection.</p>
        </div>
      {%- else -%}
        <ul id="product-grid" class="grid grid--2-col grid--3-col-tablet grid--4-col-desktop">
          {%- for product in collection.products -%}
            <li class="grid__item">
              {% render 'card-product',
                card_product: product,
                show_vendor: section.settings.show_vendor
              %}
            </li>
          {%- endfor -%}
        </ul>

        {%- comment -%} 3. 调用美化后的分页组件 {%- endcomment -%}
        {%- if paginate.pages > 1 -%}
          {% render 'pagination', paginate: paginate %}
        {%- endif -%}
      {%- endif -%}
    {%- endpaginate -%}
  </div>
</div>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    {
      "type": "header",
      "content": "Collection Header"
    },
    {
      "type": "checkbox",
      "id": "show_title",
      "default": true,
      "label": "Show Collection Title"
    },
    {
      "type": "checkbox",
      "id": "show_description",
      "default": true,
      "label": "Show Collection Description"
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "default": true,
      "label": "Show Product Count"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "Enable Sorting"
    },
    {
      "type": "header",
      "content": "Product Grid"
    },
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 48,
      "step": 4,
      "default": 16,
      "label": "Products per page"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show Vendor"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "label": "Top Padding"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 40,
      "label": "Bottom Padding"
    }
  ]
}
{% endschema %}